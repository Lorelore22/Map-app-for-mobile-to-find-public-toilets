{{#with toilet}}
<h1>{{location}} {{toiletType}} toilet: </h1>

<div>
  {{#if price}}
  <h2>Price: {{price}} €</h2>
  {{else}}
  <h2>Price: free</h2>
  {{/if}}
</div>

<div>
  {{#if cleanliness}}
  <p>Cleanliness: {{cleanliness}}</p>
  {{/if}}
</div>


<div>
  {{#if experience}}
  <p>Experiences: {{experience}}</p>
  {{/if}}
</div>


<div>
  {{#if soap}}
  <p>{{soap}}</p>
  {{/if}}
</div>





<div></div>
<div>
  {{#if handDryer}}
  <p>{{handDryer}}</p>
  {{/if}}
</div>
<div>
  {{#if paperTowels}}
  </p>{{paperTowels}}</p>
  {{/if}}
</div>
<div>
  {{#if clothTowels}}
  <p> {{clothTowels}}</p>
  {{/if}}
</div>
<div>
  {{#if other}}
  <p> {{other}}</p>
  {{/if}}
</div>
<div>
  {{#if none}}
  <p> ❌ no drying options</p>
  {{/if}}
</div>
</div>


<div>
  <div>
    {{#if changingTableMen}}
    <p> ✔️ Changing table in men's room</p>
    {{/if}}
  </div>
  <div>
    {{#if changingTableWomen}}
    <p>{{changingTableWomen}}</p>
    {{/if}}
  </div>
  <div>
    {{#if feminineProducts}}
    <p>{{feminineProducts}}</p>
    {{/if}}
  </div>
  <div>
    {{#if trashCan}}
    <p>{{trashCan}}</p>
    {{/if}}
  </div>
</div>



<div>
  <div>
    {{#if genderSensitivity}}
    <p>{{genderSensitivity}}</p>
    {{/if}}
  </div>
  {{#if barrierFree}}
  <p>{{barrierFree}}</p>
  {{/if}}
</div>


<div>
  {{#if comment}}
  <p>Comment: {{comment}}</p>
  {{else}}
  <p>No additional comments</p>
  {{/if}}
</div>

{{/with}}


{{!-- {{#if showDelete}} --}}
<a href="/toilets/{{toilet.id}}/delete">Delete this toilet</a>
<a href="/toilets/edit/{{toilet.id}}">Edit Toilet</a>
{{!-- {{/if}} --}}



